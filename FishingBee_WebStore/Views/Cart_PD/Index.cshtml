<head>
    <link rel="stylesheet" href="~/css/Giohang.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<h2 class="text-2xl font-bold mb-6">🛒 GIỎ HÀNG</h2>

@if (!Model.Any())
{
    <div class="text-center text-gray-500">
        <p>Giỏ hàng của bạn đang trống.</p>
    </div>
}
else
{
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-2">
        <!-- Bên trái: Danh sách sản phẩm -->
        <div class="lg:col-span-2">
            <table class="w-full text-left border-t border-gray-300">
                <thead>
                    <tr class="text-sm text-gray-600 uppercase">
                        <th class="py-3">Sản phẩm</th>
                        <th class="py-3">Giá</th>
                        <th class="py-3">Số lượng</th>
                        <th class="py-3">Tạm tính</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var product = item.ProductDetail.Product;
                        var imageUrl = product.ProductImages?.FirstOrDefault()?.ImageUrl ?? "/images/default.png";
                        var unitPrice = item.ProductDetail.Price;
                        var total = unitPrice * item.Quantity;

                        <tr class="border-t border-gray-200">
                            <td class="py-4 flex items-center space-x-4">
                                <img src="@imageUrl" alt="@product.Name" class="w-16 h-16 object-cover border rounded">
                                <div>
                                    <div class="font-semibold">@product.Name</div>
                                    <div class="text-xs text-gray-500">@product.AttributeName @item.ProductDetail.AttributeValue @product.AttributeUnit</div>
                                    <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.Id })" class="text-red-500 text-xs hover:underline">Xóa</a>
                                </div>
                            </td>
                            <td class="py-4">@unitPrice.ToString("N0") ₫</td>
                            <td class="py-4">
                                <div class="flex items-center border rounded w-fit">
                                    <a href="@Url.Action("UpdateQuantity", "Cart", new { id = item.Id, quantity = item.Quantity - 1 })" class="px-2 text-gray-600 hover:text-black">−</a>
                                    <span class="px-2">@item.Quantity</span>
                                    <a href="@Url.Action("UpdateQuantity", "Cart", new { id = item.Id, quantity = item.Quantity + 1 })" class="px-2 text-gray-600 hover:text-black">+</a>
                                </div>
                            </td>
                            <td class="py-4 font-semibold">@total.ToString("N0") ₫</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-6">
                <a href="/Products" class="inline-block text-red-600 border border-red-600 px-4 py-2 rounded hover:bg-red-600 hover:text-white transition">
                    ← Tiếp tục xem sản phẩm
                </a>
            </div>
        </div>

        <!-- Bên phải: Tổng cộng -->
        <div class="bg-gray-100 p-6 rounded shadow-md h-fit">
            @{
                var totalAmount = Model.Sum(item => item.ProductDetail.Price * item.Quantity);
            }
            <div class="text-lg font-semibold mb-4">CỘNG GIỎ HÀNG</div>
            <div class="flex justify-between mb-2">
                <span>Tạm tính</span>
                <span>@totalAmount.ToString("N0") ₫</span>
            </div>
            <div class="flex justify-between font-bold text-lg border-t pt-2">
                <span>Tổng</span>
                <span>@totalAmount.ToString("N0") ₫</span>
            </div>

            <form class="mt-4">
                <label class="block mb-2 font-medium">Mã ưu đãi</label>
                <input type="text" class="w-full border px-3 py-2 rounded mb-2" placeholder="Mã ưu đãi">
                <button type="submit" class="w-full bg-gray-800 text-white py-2 rounded hover:bg-black">Áp dụng</button>
            </form>

            <a href="/Checkout" class="block mt-6 text-center bg-red-600 hover:bg-red-700 text-white font-bold py-2 rounded">
                TIẾN HÀNH THANH TOÁN
            </a>
        </div>
    </div>
}
