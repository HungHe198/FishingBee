@model Data_FishingBee.Models.Coupon

@{
    ViewData["Title"] = "Chỉnh sửa mã giảm giá";
}

<h2>Chỉnh sửa mã giảm giá</h2>

<form asp-action="Edit" method="post" onsubmit="return validateForm()">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Tên mã giảm giá</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Phần trăm giảm</label>
        <input asp-for="Percent" class="form-control" type="number" required min="1" max="99" />
        <span class="text-danger" id="percentError"></span>
    </div>

    <div class="form-group">
        <label>Ngày bắt đầu</label>
        <input asp-for="DateStart" class="form-control" type="date" required />
        <span class="text-danger" id="dateStartError"></span>
    </div>

    <div class="form-group">
        <label>Ngày kết thúc</label>
        <input asp-for="DateEnd" class="form-control" type="date" required />
        <span class="text-danger" id="dateEndError"></span>
    </div>

    <div class="form-group">
        <label>Số lượng</label>
        <input asp-for="QuantityAvailable" class="form-control" type="number" required min="1" />
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        <input asp-for="Description" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <select asp-for="Status" class="form-control">
            <option value="Active">Hoạt động</option>
            <option value="Inactive">Ngừng hoạt động</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

<script>
    function validateForm() {
        const percent = parseFloat(document.querySelector('[name="Percent"]').value);
        const dateStart = new Date(document.querySelector('[name="DateStart"]').value);
        const dateEnd = new Date(document.querySelector('[name="DateEnd"]').value);
        const today = new Date();
        today.setHours(0, 0, 0, 0); // Đặt về 00:00 để so sánh ngày chính xác

        let valid = true;

        // Kiểm tra phần trăm giảm giá
        if (percent <= 0 || percent >= 100) {
            document.getElementById("percentError").innerText = "Phần trăm phải lớn hơn 0 và nhỏ hơn 100.";
            valid = false;
        } else {
            document.getElementById("percentError").innerText = "";
        }

        // Kiểm tra ngày bắt đầu
        if (dateStart <= today) {
            document.getElementById("dateStartError").innerText = "Ngày bắt đầu phải lớn hơn ngày hiện tại.";
            valid = false;
        } else {
            document.getElementById("dateStartError").innerText = "";
        }

        // Kiểm tra ngày kết thúc
        if (dateEnd <= today || dateEnd < dateStart) {
            document.getElementById("dateEndError").innerText = "Ngày kết thúc phải lớn hơn ngày hiện tại và không nhỏ hơn ngày bắt đầu.";
            valid = false;
        } else {
            document.getElementById("dateEndError").innerText = "";
        }

        return valid;
    }
</script>
