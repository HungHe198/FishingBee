@{
    ViewData["Title"] = "Đăng nhập";
}

<h2>Đăng nhập</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="username"><strong>Tên đăng nhập</strong></label>
        <input id="username" name="username" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="password"><strong>Mật khẩu</strong></label>
        <input id="password" name="password" class="form-control" type="password" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Đăng nhập</button>

    <div class="mt-2">
        <a asp-action="ForgotPassword" asp-controller="ForgotPassword">Quên mật khẩu?</a>
    </div>
</form>

<p class="mt-3">
    <a asp-action="Register">Chưa có tài khoản? Đăng ký</a>
</p>

