@model Data_FishingBee.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Xác nhận xóa sản phẩm</h4>
        </div>
        <div class="card-body">
            <h5>Bạn có chắc chắn muốn xóa sản phẩm sau không?</h5>
            <dl class="row mt-3">
                <dt class="col-sm-3">Tên sản phẩm:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Danh mục:</dt>
                <dd class="col-sm-9">@Model.Category?.Name</dd>

                <dt class="col-sm-3">Nhà sản xuất:</dt>
                <dd class="col-sm-9">@Model.Manufacturer?.Name</dd>

                <dt class="col-sm-3">Trạng thái:</dt>
                <dd class="col-sm-9">@((Model.Status == "1" || Model.Status == "Hoạt động") ? "Hoạt động" : "Không hoạt động")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Hủy
                </a>
            </form>
        </div>
    </div>
</div>
