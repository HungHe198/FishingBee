@if (TempData["SuccessMessage"] != null)
{
	<div id="successMessage" class="alert alert-success">
		@TempData["SuccessMessage"]
	</div>

	<script>
		setTimeout(function () {
			document.getElementById("successMessage").style.display = "none";
		}, 1000); // 1000ms = 1 giây
	</script>
}

