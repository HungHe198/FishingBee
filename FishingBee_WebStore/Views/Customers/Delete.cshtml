@model Data_FishingBee.Models.Customer

@{
    ViewData["Title"] = "Xác nhận xoá khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
        <div>
            <strong>Bạn có chắc chắn muốn xoá khách hàng này?</strong>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <strong>Thông tin khách hàng</strong>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>

                <dt class="col-sm-3">CMND/CCCD</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IDCardNumber)</dd>

                <dt class="col-sm-3">Địa chỉ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">Ngày sinh</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DoB)</dd>

                <dt class="col-sm-3">Điểm tích lũy</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LoyaltyPoints)</dd>

                <dt class="col-sm-3">Tình trạng</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3">Tạo bởi</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedBy)</dd>

                <dt class="col-sm-3">Thời gian tạo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedTime)</dd>

                <dt class="col-sm-3">Cập nhật bởi</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ModifiedBy)</dd>

                <dt class="col-sm-3">Thời gian cập nhật</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ModifiedTime)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Xoá
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
