@model Data_FishingBee.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-person-plus-fill"></i> Thêm khách hàng mới</h2>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="row g-3">

            <div class="col-md-6">
                <label asp-for="UserId" class="form-label"></label>
                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="IDCardNumber" class="form-label"></label>
                <input asp-for="IDCardNumber" class="form-control" />
                <span asp-validation-for="IDCardNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DoB" class="form-label"></label>
                <input asp-for="DoB" class="form-control" type="date" />
                <span asp-validation-for="DoB" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LoyaltyPoints" class="form-label"></label>
                <input asp-for="LoyaltyPoints" class="form-control" />
                <span asp-validation-for="LoyaltyPoints" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Status" class="form-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CreatedBy" class="form-label"></label>
                <input asp-for="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CreatedTime" class="form-label"></label>
                <input asp-for="CreatedTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="CreatedTime" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ModifiedBy" class="form-label"></label>
                <input asp-for="ModifiedBy" class="form-control" />
                <span asp-validation-for="ModifiedBy" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ModifiedTime" class="form-label"></label>
                <input asp-for="ModifiedTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="ModifiedTime" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Thêm mới
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
