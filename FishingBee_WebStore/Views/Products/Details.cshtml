@model Data_FishingBee.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Thông tin chi tiết sản phẩm</h4>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Tên sản phẩm</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Thuộc tính</dt>
                <dd class="col-sm-9">@Model.AttributeName</dd>

                <dt class="col-sm-3">Đơn vị tính</dt>
                <dd class="col-sm-9">@Model.AttributeUnit</dd>

                <dt class="col-sm-3">Loại sản phẩm</dt>
                <dd class="col-sm-9">@Model.Category?.Name</dd>

                <dt class="col-sm-3">Hãng sản xuất</dt>
                <dd class="col-sm-9">@Model.Manufacturer?.Name</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @(Model.Status == "1" ? "Hoạt động" : "Không hoạt động")
                </dd>

                <dt class="col-sm-3">Người tạo</dt>
                <dd class="col-sm-9">@Model.CreatedBy</dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.CreatedTime?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Người chỉnh sửa</dt>
                <dd class="col-sm-9">@Model.ModifiedBy</dd>

                <dt class="col-sm-3">Ngày chỉnh sửa</dt>
                <dd class="col-sm-9">@Model.ModifiedTime?.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
