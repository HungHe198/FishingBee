@model IEnumerable<Data_FishingBee.Models.Coupon>

@{
    ViewData["Title"] = "Danh sách Mã Giảm Giá";
}

<h2>Danh sách Mã Giảm Giá</h2>
<a asp-action="Create" class="btn btn-primary">Tạo mới</a>
<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Phần trăm</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Số lượng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Percent %</td>
                <td>@item.DateStart.ToShortDateString()</td>
                <td>@item.DateEnd.ToShortDateString()</td>
                <td>@item.QuantityAvailable</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Xem</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
