@model Data_FishingBee.Models.Employee

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<div class="container mt-4">
    <h1 class="text-danger">Xác nhận xóa nhân viên</h1>
    <p>Bạn có chắc chắn muốn xóa nhân viên này không?</p>

    <div class="card mb-3">
        <div class="card-header">
            <strong>Thông tin nhân viên</strong>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Code)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Code)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Fullname)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Fullname)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Position)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Position)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Salary)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Salary)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.HireDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.HireDate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.IDCardNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.IDCardNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.User.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.User.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Status)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedBy)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.CreatedBy)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedTime)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.CreatedTime)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.ModifiedBy)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.ModifiedBy)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.ModifiedTime)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.ModifiedTime)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy / Quay lại</a>
    </form>
</div>
