@model Data_FishingBee.Models.Employee

@{
    ViewData["Title"] = "Chi tiết nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thông tin chi tiết nhân viên</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Mã nhân viên</dt>
                <dd class="col-sm-9">@Model.Code</dd>

                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Model.Fullname</dd>

                <dt class="col-sm-3">Chức vụ</dt>
                <dd class="col-sm-9">@Model.Position</dd>

                <dt class="col-sm-3">Lương</dt>
                <dd class="col-sm-9">@Model.Salary.ToString("C0")</dd>

                <dt class="col-sm-3">Ngày vào làm</dt>
                <dd class="col-sm-9">@Model.HireDate?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Số CCCD</dt>
                <dd class="col-sm-9">@Model.IDCardNumber</dd>

                <dt class="col-sm-3">Tình trạng</dt>
                <dd class="col-sm-9">
                    @(Model.Status == "1" ? "Hoạt động" : "Không hoạt động")
                </dd>

                <dt class="col-sm-3">Người tạo</dt>
                <dd class="col-sm-9">@Model.CreatedBy</dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.CreatedTime?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Người sửa cuối</dt>
                <dd class="col-sm-9">@Model.ModifiedBy</dd>

                <dt class="col-sm-3">Ngày sửa cuối</dt>
                <dd class="col-sm-9">@Model.ModifiedTime?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Tài khoản người dùng</dt>
                <dd class="col-sm-9">@Model.User?.Email</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
