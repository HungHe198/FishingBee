@model Data_FishingBee.Models.User

@{
    ViewData["Title"] = "Đăng ký";
}

<h2>Đăng ký</h2>

<form asp-action="Register" method="post">
    <div>
        <label>Tên đăng nhập</label>
        <input asp-for="Username" class="form-control" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div>
        <label>Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label>Số điện thoại</label>
        <input asp-for="PhoneNumber" class="form-control" type="tel" required />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mật khẩu</label>
        <input name="Password" class="form-control" type="password" required />
        <span class="text-danger">@Html.ValidationMessage("Password")</span>
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>

<a asp-action="Login">Đã có tài khoản? Đăng nhập</a>
