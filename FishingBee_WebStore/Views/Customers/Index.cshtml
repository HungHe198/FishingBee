@model IEnumerable<Data_FishingBee.Models.Customer>

@{
    ViewData["Title"] = "Khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people-fill"></i> Danh sách khách hàng</h2>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-person-plus-fill"></i> Thêm khách hàng
    </a>
</div>

<table class="table table-bordered table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedTime)</th>
            <th>@Html.DisplayNameFor(model => model.ModifiedBy)</th>
            <th>@Html.DisplayNameFor(model => model.ModifiedTime)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.IDCardNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.DoB)</th>
            <th>@Html.DisplayNameFor(model => model.LoyaltyPoints)</th>
            <th>Email</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedTime)</td>
                <td>@Html.DisplayFor(modelItem => item.ModifiedBy)</td>
                <td>@Html.DisplayFor(modelItem => item.ModifiedTime)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.IDCardNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.DoB)</td>
                <td>@Html.DisplayFor(modelItem => item.LoyaltyPoints)</td>
                <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id" title="Sửa">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id" title="Chi tiết">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Xoá">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
