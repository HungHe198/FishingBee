@model Data_FishingBee.Models.Coupon

@{
    ViewData["Title"] = "Chi Tiết Mã Giảm Giá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0"><i class="bi bi-ticket-detailed-fill"></i> Chi Tiết Mã Giảm Giá</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tên</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Phần Trăm Giảm</dt>
            <dd class="col-sm-9">@Model.Percent %</dd>

            <dt class="col-sm-3">Ngày Bắt Đầu</dt>
            <dd class="col-sm-9">@Model.DateStart.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Ngày Kết Thúc</dt>
            <dd class="col-sm-9">@Model.DateEnd.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Giá trị đơn tối thiểu</dt>
            <dd class="col-sm-9">@Model.MinOfTotalPrice.ToString("N2")</dd>

            <dt class="col-sm-3">Giảm tối đa</dt>
            <dd class="col-sm-9">@Model.MaxOfDiscount.ToString("N2")</dd>

            <dt class="col-sm-3">Số Lượng</dt>
            <dd class="col-sm-9">@Model.QuantityAvailable</dd>

            <dt class="col-sm-3">Mô Tả</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Trạng Thái</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Ngày Tạo</dt>
            <dd class="col-sm-9">@Model.CreatedTime?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Ngày Sửa</dt>
            <dd class="col-sm-9">@Model.ModifiedTime?.ToString("dd/MM/yyyy")</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>
</div>
