@model dynamic

@{
    ViewData["Title"] = "Chỉnh Sửa Nhân Viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2>Chỉnh Sửa Nhân Viên</h2>

<form asp-action="EditEmployee" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label>Mã Nhân Viên:</label>
        <input type="text" class="form-control" value="@Model.Code" readonly />
    </div>

    <div class="form-group">
        <label>Họ và Tên:</label>
        <input type="text" class="form-control" name="fullname" value="@Model.Fullname" required />
    </div>

    <div class="form-group">
        <label>Vị Trí:</label>
        <input type="text" class="form-control" name="position" value="@Model.Position" required />
    </div>

    <div class="form-group">
        <label>Lương:</label>
        <input type="number" class="form-control" name="salary" value="@Model.Salary" required />
    </div>

    <div class="form-group">
        <label>Ngày Tuyển Dụng:</label>
        <input type="date" class="form-control" name="hireDate" value="@Model.HireDate?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label>Số CMND/CCCD:</label>
        <input type="text" class="form-control" name="idCardNumber" value="@Model.IDCardNumber" />
    </div>

    <div class="form-group">
        <label>Email:</label>
        <input type="email" class="form-control" name="email" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label>Số Điện Thoại:</label>
        <input type="text" class="form-control" name="phoneNumber" value="@Model.PhoneNumber" />
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a href="@Url.Action("Details", "User", new { id = Model.Id })" class="btn btn-secondary">Hủy</a>
</form>
