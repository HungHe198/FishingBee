@model Data_FishingBee.Models.Employee
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
    
    var user = ViewBag.User as Data_FishingBee.Models.User;
}

<h2>Chỉnh sửa thông tin nhân viên</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="UserId" value="@user?.Id" />

    <h4>Thông tin tài khoản</h4>
    <div class="form-group">
        <label>Tên đăng nhập</label>
        <input name="Username" class="form-control" value="@user?.Username" required />
    </div>
    <div class="form-group">
        <label>Mật khẩu</label>
        <input name="Password" class="form-control" type="password" value="@user?.Password" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input name="Email" class="form-control" type="email" value="@user?.Email" required />
    </div>

    <h4>Thông tin nhân viên</h4>
    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="Fullname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Chức vụ</label>
        <input asp-for="Position" class="form-control" />
    </div>
    <div class="form-group">
        <label>Lương</label>
        <input asp-for="Salary" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mã nhân viên</label>
        <input asp-for="Code" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ngày vào làm</label>
        <input asp-for="HireDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>CMND/CCCD</label>
        <input asp-for="IDCardNumber" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
