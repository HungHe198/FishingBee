@model IEnumerable<Data_FishingBee.Models.Bill>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    var currentStatus = ViewBag.SelectedStatus as string;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  
}

<h2>Quản lý đơn hàng</h2>

<form asp-action="Index" method="get" class="mb-3">
    <label>Lọc theo trạng thái: </label>
    <select name="status" onchange="this.form.submit()" class="form-select w-auto d-inline-block">
        <option value="">-- Tất cả --</option>
        <option value="0" selected="@(currentStatus == "0")">Giao thành công</option>
        <option value="1" selected="@(currentStatus == "1")">Chờ xác nhận</option>
        <option value="2" selected="@(currentStatus == "2")">Đang vận chuyển</option>
        <option value="3" selected="@(currentStatus == "3")">Đã hủy</option>
        <option value="4" selected="@(currentStatus == "4")">Hoàn trả tiền</option>
    </select>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã hóa đơn</th>
            <th>Tên khách</th>
            <th>Tổng tiền</th>
            <th>Phương thức</th>
            <th>Trạng thái</th>
            <th>Cập nhật trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.InvoiceCode</td>
                <td>@bill.CustomerName</td>
                <td>@bill.TotalPrice.ToString("N0") ₫</td>
                <td>@bill.PaymentMethod</td>
                <td>
                    @{
                        var statusLabel = bill.Status switch
                        {
                            "0" => "Giao thành công",
                            "1" => "Chờ xác nhận",
                            "2" => "Đang vận chuyển",
                            "3" => "Đã hủy",
                            "4" => "Hoàn trả tiền",
                            _ => "Không xác định"
                        };
                    }
                    @statusLabel
                </td>
                <td>
                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@bill.Id" />
                        <select name="newStatus" class="form-select form-select-sm d-inline w-auto">
                            <option value="1">Chờ xác nhận</option>
                            <option value="2">Đang vận chuyển</option>
                            <option value="0">Giao thành công</option>
                            <option value="4">Hoàn trả tiền</option>
                            <option value="3">Hủy đơn</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Cập nhật</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
