@model Data_FishingBee.Models.Customer

@{
    ViewData["Title"] = "Chỉnh sửa khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-pencil-square"></i> Chỉnh sửa khách hàng</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="UserId" class="form-label"></label>
                        <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CreatedBy" class="form-label"></label>
                        <input asp-for="CreatedBy" class="form-control" />
                        <span asp-validation-for="CreatedBy" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CreatedTime" class="form-label"></label>
                        <input asp-for="CreatedTime" class="form-control" />
                        <span asp-validation-for="CreatedTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ModifiedBy" class="form-label"></label>
                        <input asp-for="ModifiedBy" class="form-control" />
                        <span asp-validation-for="ModifiedBy" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ModifiedTime" class="form-label"></label>
                        <input asp-for="ModifiedTime" class="form-control" />
                        <span asp-validation-for="ModifiedTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IDCardNumber" class="form-label"></label>
                        <input asp-for="IDCardNumber" class="form-control" />
                        <span asp-validation-for="IDCardNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DoB" class="form-label"></label>
                        <input asp-for="DoB" type="date" class="form-control" />
                        <span asp-validation-for="DoB" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LoyaltyPoints" class="form-label"></label>
                        <input asp-for="LoyaltyPoints" class="form-control" />
                        <span asp-validation-for="LoyaltyPoints" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save2"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
