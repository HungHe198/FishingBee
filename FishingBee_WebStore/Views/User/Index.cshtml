@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Danh sách Users và Admins";
}

<h2>Danh sách Users và Admins</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>PassWord</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Loại User</th>
            <th>Trạng thái</th>
            <th>Ngày tạo tài khoản</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.Password</td>
                <td>@(item.Email ?? "N/A")</td>
                <td>@(item.PhoneNumber ?? "N/A")</td>
                <td>@item.UserType</td>
                <td id="status-@item.Id">@item.Status</td>
                <td>@item.CreatedTime?.ToString("dd/MM/yyyy HH:mm")</td> <!-- Format ngày tạo -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    <button class="toggle-status-btn btn btn-info btn-sm" data-user-id="@item.Id">
                        @(item.Status == "Active" ? "Vô hiệu hóa" : "Kích hoạt")
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.querySelectorAll('.toggle-status-btn').forEach(button => {
        button.addEventListener('click', function() {
            const userId = this.getAttribute('data-user-id');

            fetch('/Account/ToggleUserStatus', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId: userId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById(`status-${userId}`).innerText = data.newStatus;
                    this.innerText = (data.newStatus === "Active") ? "Vô hiệu hóa" : "Kích hoạt";
                } else {
                    alert("Có lỗi xảy ra. Vui lòng thử lại!");
                }
            })
            .catch(error => console.error('Error:', error));
        });
    });
</script>
